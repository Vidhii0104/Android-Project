<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionAnswer"
    android:background="@color/black">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


        <TextView
            android:id="@+id/text_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post a Question"
            android:layout_centerInParent="true"
            android:textColor="@color/gold"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar"/>
    <EditText
        android:textColor="@color/orange"
        android:id="@+id/TitleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/text_ques"
        android:ems="10"
        android:hint="Question"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:singleLine="true"
        android:textColorHint="@color/orange"/>

    <Button
        android:id="@+id/quest_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleField"
        android:layout_margin="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/orange"
        android:text="Ask"
        android:textColor="@color/black" />

    <EditText
        android:textColor="@color/orange"
        android:textColorHint="@color/orange"
        android:id="@+id/ansFld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quest_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Answers"
        android:inputType="textMultiLine"
        android:padding="15dp" />

    <Button
        android:id="@+id/ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ansFld"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="30dp"
        android:background="@color/orange"
        android:text="Say"
        android:textColor="@color/black" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/orange"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:menu="@menu/bottom_menu" />

        />
    </RelativeLayout>

<!--</androidx.constraintlayout.widget.ConstraintLayout>-->